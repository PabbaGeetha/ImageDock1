<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.ImageDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_10dp"
                app:cardCornerRadius="@dimen/view_radius"
                app:cardElevation="@dimen/view_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_view_detail"
                        android:layout_width="@dimen/image_width_height"
                        android:layout_height="@dimen/image_width_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_1dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/tv_userName_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:gravity="center"
                        android:lines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_1dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/tv_tags_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20sp" />

                    <TextView
                        android:id="@+id/tv_likes_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20sp" />

                    <TextView
                        android:id="@+id/tv_downloads_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20sp" />

                    <TextView
                        android:id="@+id/tv_comments_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_1dp"
                        android:background="@color/grey" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>